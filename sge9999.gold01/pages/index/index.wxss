/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.index-top {
  background-image: url('http://120.26.58.177:8888/index01_02.png');
  background-size: 100% 100%;
  width: 100%;
  height: 666px;
}

.hr {
  width: 555rpx;
  height: 1px;
  background: #e0e0e0;
  margin: auto;
}

.top-tip {
  width: 555rpx;
  height: 108rpx;
  display: block;
  margin: 100rpx auto;
}

.index-footer {
  width: 100%;
  height: 100%;
  background: #f1e4db;
}

.open-title {
  margin: 30rpx 100rpx;
}

.open-icon {
  width: 100%;
  height: auto;
  font-size: 22rpx;
}
.open-icon::after {
  content: '';
}
.open-icon image {
  width: 72rpx;
  height: 72rpx;
}

.open-item {
  margin-left: 100rpx;
}
.open-item-tip {
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.open-btn {
  width: 400rpx;
  margin: 70rpx auto;
  display: block;
  line-height:2.3;
  font-size:13px;
  padding:0 1.34em;
}

.copyright {
  font-size: 12px;
  text-align: center;
  margin-top: 200rpx;
}
