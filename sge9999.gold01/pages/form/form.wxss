.form {
  background-image: url('http://120.26.58.177:8888/bg.png');
}

input {
    font-size: 13px;
    color: #fff;
    margin: 5px 20px;
}
.mobile {
    width: 80%;
    height: 40px;
    margin-top: 100px;
    border: 1px #fff solid;
    border-radius: 30px;
}
.v-view {
    width: 80%;
    margin-top: 20px;
}

.code {
    width: 50%;
    height: 40px;
    border: 1px #fff solid;
    border-radius: 30px;
}
.code-btn {
    width: 40%;
    height: 40px;
    display: block;
    line-height:2.3;
    font-size:16px;
    padding:0 1.5em;
    border-radius: 30px;
    color: #598fd6;
}
.submit {
    width: 80%;
}
.submit button {
    margin-top: 20px;
    width: 100%;
    background: #2798eb;
    color: #fff;
    border-radius: 30px;
}